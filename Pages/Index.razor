@page "/"

<SfMaps>
    <MapsTitleSettings Text="Top 10 Countries with Highest Number of Internet Users">
    </MapsTitleSettings>
    <MapsLayers>
        <MapsLayer ShapeData='new {dataOptions= "https://cdn.syncfusion.com/maps/map-data/world-map.json"}'
                   TValue="CountryDataModel" ShapePropertyPath='new string[] {"name"}' ShapeDataPath="CountryName">
            <MapsShapeSettings Fill="#E5E5E5"></MapsShapeSettings>     
            <MapsBubbleSettings>
                @*<MapsBubble TValue="CountryDataModel" DataSource="@InternetUsersDetails" Visible="true"
                    BubbleType="BubbleType.Circle" MinRadius="5" MaxRadius="15"
                    ValuePath="Value" Fill="#37AFAB" AnimationDuration="1000">
                 </MapsBubble>*@
                <MapsBubble DataSource="@InternetUsersDetails" TValue="CountryDataModel" Visible="true"
                            ValuePath="Value" BubbleType="BubbleType.Circle"
                            AnimationDuration="1000" MinRadius="5" MaxRadius="15"
                            ColorValuePath="Color">
                    <MapsBubbleTooltipSettings Visible="true" ValuePath="Value"
                                               Format="<b>${CountryName}</b> <br> Internet Users Value : ${Value}">

                    </MapsBubbleTooltipSettings>
                </MapsBubble>
                @*<MapsBubble TValue="CountryDataModel" DataSource="@InternetUsersDetails" Visible="true"
                    BubbleType="BubbleType.Circle" ColorValuePath="Color" MinRadius="15" MaxRadius="25"
                    ValuePath="Population" Opacity="0.4">
        </MapsBubble>*@

            </MapsBubbleSettings>
        </MapsLayer>
    </MapsLayers>
</SfMaps>

